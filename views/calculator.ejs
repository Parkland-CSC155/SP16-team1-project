<!DOCTYPE html>
<html lang="en">

<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8">
    <title>Nutrition Calculator</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">

    <style type="text/css">
        /* CSS HERE */
    </style>

</head>

<body>
    <h1>Nutrition Calculator</h1>
    <a href="/calculator/form">Add Ingredient</a>
    <a href="/logout">Logout</a>
    <hr>
    <table style="width:100%">
        <td>Shrt_Desc</td>
        <td>Serving Size</td>
        <td>Energ_Kcal</td>
        <td>Carbohydrt_(g)</td>
        <td>Lipid_Tot(g)</td>
        <td>Protein_(g)</td>
        <td>Sodium_(mg)</td>
        <td>Sugar_Tot_(g)</td>
        <% var e = 0 %>
        <% var c = 0 %>
        <% var l = 0 %>
        <% var p = 0 %>
        <% var so = 0 %>
        <% var su = 0 %>
        <% for(var i=0; i< infos.length; i++) { %>
            <tr>
                <td>
                    <%= infos[i][0]['Shrt_Desc'] %>
                </td>
                <td>
                    <%= infos[i][1] %>
                </td>
                <td>
                    <%= infos[i][0]['Energ_Kcal']*infos[i][1] %>
                    <% e += infos[i][0]['Energ_Kcal']*infos[i][1] %>
                </td>
                <td>
                    <%= infos[i][0]['Carbohydrt_(g)']*infos[i][1] %>
                    <% c += infos[i][0]['Carbohydrt_(g)']*infos[i][1] %>
                </td>
                <td>
                    <%= infos[i][0]['Lipid_Tot_(g)']*infos[i][1] %>
                    <% l += infos[i][0]['Lipid_Tot_(g)']*infos[i][1] %>
                </td>
                <td>
                    <%= infos[i][0]['Protein_(g)']*infos[i][1] %>
                    <% p += infos[i][0]['Protein_(g)']*infos[i][1] %>
                </td>
                <td>
                    <%= infos[i][0]['Sodium_(mg)']*infos[i][1] %>
                    <% so += infos[i][0]['Sodium_(mg)']*infos[i][1] %>
                </td>
                <td>
                    <%= infos[i][0]['Sugar_Tot_(g)']*infos[i][1] %>
                    <% su += infos[i][0]['Sugar_Tot_(g)']*infos[i][1] %>
                </td>
                <% } %>
            </tr>
            <tr><td height=30 colspan=1></td></tr>
            <tr>
                <td>Total</td>
                <td>Serving Size</td>
                <td>Energ_Kcal</td>
                <td>Carbohydrt_(g)</td>
                <td>Lipid_Tot(g)</td>
                <td>Protein_(g)</td>
                <td>Sodium_(mg)</td>
                <td>Sugar_Tot_(g)</td>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td><%= e %></td>
                <td><%= c %></td>
                <td><%= l %></td>
                <td><%= p %></td>
                <td><%= so %></td>
                <td><%= su %></td>
                </tr>
    </table>


    <!-- JS -->
    <!-- this is the jQuery CDN reference. You need internet access for this file! -->
    <script src="https://code.jquery.com/jquery-2.2.3.min.js" type="text/javascript"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="/js/site.js" type="text/javascript"></script>
</body>

</html>